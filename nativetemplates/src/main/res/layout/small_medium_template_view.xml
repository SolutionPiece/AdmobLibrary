<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.ads.formats.UnifiedNativeAdView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/native_ad_view"
        android:paddingBottom="7dp"
        android:background="@drawable/native_outline_shape"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.google.android.gms.ads.formats.MediaView
                android:id="@+id/media_view"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="6dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/content"
                    android:layout_marginLeft="6dp"
                    >
                    <LinearLayout
                        android:id="@+id/headline"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/primary"
                            android:background="@color/gnt_white"
                            android:textStyle="normal"
                            android:textSize="12dp"
                            android:textColor="@color/gnt_gray"
                            android:lines="1"
                            android:text="primary"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:layout_width="match_parent"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/row_two"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        >

                        <TextView
                            android:id="@+id/ad_notification_view"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="@drawable/ad_text_background"
                            android:gravity="center"
                            android:text="Ad"
                            android:textSize="11dp"
                            android:textColor="@color/text_ad_color"
                            android:textStyle="normal" />


                        <com.google.android.ads.nativetemplates.RatingView
                            android:id="@+id/rating_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:drawable_empty="@mipmap/star_off"
                            app:drawable_half="@mipmap/star_half"
                            app:drawable_filled="@mipmap/star"
                            app:drawable_size="18dp"
                            android:focusable="false"
                            app:is_indicator="false"
                            app:max_count="5"
                            android:layout_marginLeft="6dp"
                            app:rating="4.5" />

                        <TextView
                            android:id="@+id/secondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:textSize="12dp"
                            android:textStyle="normal"
                            android:textColor="@color/gnt_gray"
                            android:lines="1"
                            android:ellipsize="end"
                            android:paddingLeft="5dp"
                            android:inputType="textCapWords"
                            android:text="secondary"
                            />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:gravity="center"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="10"
                   android:layout_height="match_parent"
                   android:id="@+id/body"
                   android:padding="5dp"
                   android:gravity="center|left"
                   android:maxLines="2"
                   android:ellipsize="end"
                   android:text="body"
                   android:textSize="13dp"
                   />
               <Button
                   android:id="@+id/cta"
                   android:layout_width="0dp"
                   android:layout_weight="3"
                   android:layout_height="36dp"
                   android:background="@drawable/background_button"
                   android:textColor="@color/gnt_white"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:lines="1"
                   android:textSize="13dp"
                   android:gravity="center"
                   android:text="Visit Site"
                   />

           </LinearLayout>

        </LinearLayout>


    </com.google.android.gms.ads.formats.UnifiedNativeAdView>




</LinearLayout>